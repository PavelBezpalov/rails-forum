<div class="users-new">
  <h1 class='page-title'> Sign Up </h1>
  <div class="registration-form">
    <%= form_for @user, url: '/registration' do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= error_notice(@user, :name) %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= error_notice(@user, :email) %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= error_notice(@user, :password) %>
    </div>
    <%= f.submit 'Registrate' %>
    <% end %>
    <%= link_to 'Already have an account?', login_path, class: 'link-button' %>
  </div>
</div>

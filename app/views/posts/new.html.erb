<h1>New post</h1>
<%= form_for(@post) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= error_notice(@post, :title) %>
  </div>
  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: 'form-control' %>
  </div>
  <%= f.submit 'Create post' %>
<% end %>

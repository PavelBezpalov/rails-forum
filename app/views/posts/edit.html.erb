<h1>Edit a post</h1>
<%= @messages %>
<%= form_for(@post, method: :put) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= error_notice(@post, :title) %>
  </div>
  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: 'form-control' %>
  </div>
  <%= f.submit 'Update post' %>
<% end %>

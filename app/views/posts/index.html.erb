<div class='posts-index'>
  <h1 class='page-title'>All posts</h1>
  <div class='posts-list'>
    <% @posts.each do |p| %>
      <div class='post-item' data-id='<%= p.id %>'>
        <%= link_to p.title, post_path(p), class: 'post-title' %>
        <% if logged_in? && current_user.id == p.user.id %>
          <span class="post-buttons">
            <%= link_to 'Edit', edit_post_path(p), class: 'edit' %>
            <%= link_to 'Delete', post_path(p), method: :delete,
                         class: 'delete', data: { confirm: 'Are you sure?' } %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
  <% if @posts.length.zero? %>
    <div class="notice">
      Seems like there are no posts here yet!
    </div>
  <% end %>
  <% if logged_in? %>
    <%= link_to 'Create post', new_post_path, class: 'link-button' %>
  <% end %>
</div>
